{
    "name": "Java, .NET 8, and Python 3",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "features": {
        "ghcr.io/devcontainers/features/java:1": {
            "version": "none",
            "installMaven": "true",
            "installGradle": "false"
        }
    },
    "postCreateCommand": "bash setup.sh && sudo /root/.dotnet/dotnet --version && python3 --version",
    "customizations": {
        "vscode": {
            "extensions": [
                "vscjava.vscode-java-pack",
                "ms-dotnettools.csharp",
                "ms-python.python"
            ]
        }
    }
}
